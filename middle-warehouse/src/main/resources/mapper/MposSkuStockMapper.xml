<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="MposSkuStock">
    <resultMap id="MposSkuStockMap" type="MposSkuStock">
        <id column="id" property="id"/>
        <result column="warehouse_id" property="warehouseId"/>
        <result column="shop_id" property="shopId"/>
        <result column="sku_code" property="skuCode"/>
        <result column="locked_stock" property="lockedStock"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
        
    </resultMap>

    <sql id="tb">
        pousheng_mpos_sku_stocks
    </sql>

    <sql id="cols_all">
        id, <include refid="cols_exclude_id" />
    </sql>

    <sql id="cols_exclude_id">
        warehouse_id, shop_id, sku_code, locked_stock, created_at, updated_at
    </sql>

    <sql id="vals">
        #{warehouseId}, #{shopId}, #{skuCode}, #{lockedStock}, now(), now()
    </sql>

    <sql id="queryCondition">
        
        <if test="warehouseId != null">and `warehouse_id` = #{warehouseId}</if>
        
        <if test="shopId != null">and `shop_id` = #{shopId}</if>
        
        <if test="skuCode != null">and `sku_code` = #{skuCode}</if>
        
        <if test="lockedStock != null">and `locked_stock` = #{lockedStock}</if>
        
        <if test="createdAt != null">and `created_at` = #{createdAt}</if>
        
        <if test="updatedAt != null">and `updated_at` = #{updatedAt}</if>
        
        <if test="startAt != null">and created_at &gt; #{startAt}</if>
        <if test="endAt != null">and created_at &lt; #{endAt}</if>
    </sql>

    <sql id="order">
        order by id desc
    </sql>

    <insert id="create" parameterType="MposSkuStock" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb" />
        (<include refid="cols_exclude_id" />)
        VALUES
        (<include refid="vals" />)
    </insert>

    <select id="findById" parameterType="long" resultMap="MposSkuStockMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE id = #{id}
    </select>

   <select id="findByIds" parameterType="list" resultMap="MposSkuStockMap">
        select id, <include refid="cols_exclude_id"/>
        from <include refid="tb"/>
        where id in
        <foreach collection="list" open="(" separator="," close=")"
                 item="item">
            #{item}
        </foreach>
        <include refid="order" />
    </select>

    <update id="update" parameterType="MposSkuStock">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="warehouseId != null">warehouse_id = #{warehouseId},</if>
            <if test="shopId != null">shop_id = #{shopId},</if>
            <if test="skuCode != null">sku_code = #{skuCode},</if>
            <if test="lockedStock != null">locked_stock = #{lockedStock},</if>
            
            
            
            updated_at=now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE id = #{id}
    </delete>

    <select id="paging" parameterType="list" resultMap="MposSkuStockMap">
        select id, <include refid="cols_exclude_id"/>
        from <include refid="tb"/>
        <where>
        <include refid="queryCondition"/>
        </where>
        order by id desc limit #{offset},#{limit}
    </select>

    <select id="count" parameterType="list" resultType="long">
        select count(1)
        from <include refid="tb"/>
        <where>
        <include refid="queryCondition"/>
        </where>
    </select>


    <update id="lockStockWarehouse" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET locked_stock = locked_stock + #{quantity}
        WHERE warehouse_id= #{warehouseId} and sku_code=#{skuCode}
    </update>

    <update id="lockStockShop" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET locked_stock = locked_stock + #{quantity},updated_at = now()
        WHERE shop_id= #{shopId} and sku_code=#{skuCode}
    </update>


    <select id="findByWarehouseIdAndSkuCode" parameterType="map" resultMap="MposSkuStockMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE  warehouse_id= #{warehouseId} and sku_code=#{skuCode}
    </select>


    <select id="findByShopIdAndSkuCode" parameterType="map" resultMap="MposSkuStockMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE  shop_id= #{shopId} and sku_code=#{skuCode}
    </select>



    <update id="unlockStockWarehouse" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET locked_stock = locked_stock - #{quantity}
        WHERE warehouse_id= #{warehouseId} and sku_code=#{skuCode}
    </update>


    <update id="unlockStockShop" parameterType="map">
        UPDATE
        <include refid="tb"/>
        SET locked_stock = locked_stock - #{quantity},updated_at = now()
        WHERE shop_id= #{shopId} and sku_code=#{skuCode} and locked_stock >= #{quantity}
    </update>


</mapper>