<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="WarehouseShopGroup">
    <resultMap id="WarehouseShopGroupMap" type="WarehouseShopGroup">
        <id column="id" property="id"/>
        <result column="shop_id" property="shopId"/>
        <result column="shop_name" property="shopName"/>
        <result column="group_id" property="groupId"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>

    </resultMap>

    <sql id="tb">
        pousheng_warehouse_shop_groups
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        shop_id, shop_name, group_id, created_at, updated_at
    </sql>

    <sql id="vals">
        #{shopId}, #{shopName}, #{groupId}, now(), now()
    </sql>

<!--    <sql id="queryCondition">

        <if test="shopId != null">and `shop_id` shopGroupIdopId}</if>
        <if test="groupId != null">and `group_id` = #{groupId}</if>
    </sql>-->

    <sql id="order">
        order by id desc
    </sql>

    <insert id="create" parameterType="WarehouseShopGroup" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="WarehouseShopGroupMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </select>

    <select id="findByGroupId" parameterType="long" resultMap="WarehouseShopGroupMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE group_id = #{groupId}
    </select>

    <select id="findByShopId" parameterType="long" resultMap="WarehouseShopGroupMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE shop_id = #{shopId}
    </select>

<!--    <select id="findAllButDefault" resultMap="WarehouseShopGroupMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE shop_id = #{shopId}
    </select>-->

    <select id="findByIds" parameterType="list" resultMap="WarehouseShopGroupMap">
        select id,
        <include refid="cols_exclude_id"/>
        from
        <include refid="tb"/>
        where id in
        <foreach collection="list" open="(" separator="," close=")"
                 item="item">
            #{item}
        </foreach>
        <include refid="order"/>
    </select>

    <select id="findDistinctShopIds" resultType="long">
        select distinct(shop_id) from <include refid="tb"/>
    </select>

    <select id="maxGroupId" resultType="long">
        select max(group_id) from <include refid="tb"/>
    </select>

    <update id="update" parameterType="WarehouseShopGroup">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="shopId != null">shop_id = #{shopGroupId},</if>
            <if test="shopName != null">shop_name = #{shopName},</if>
            <if test="groupId != null">group_id = #{groupId},</if>

            updated_at=now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE id = #{id}
    </delete>

    <delete id="deleteByGroupId" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE group_id = #{group_id}
    </delete>

