<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="SkuStockPushTempId">
    <sql id="tb">
        pousheng_temp_sku_stock_push_id
    </sql>

    <delete id="teardown">
        TRUNCATE TABLE <include refid="tb"/>
    </delete>

    <insert id="create">
        INSERT INTO <include refid="tb"/> (sku_code)
        SELECT DISTINCT sku_code FROM pousheng_temp_sku_stock_updated;
    </insert>

    <select id="count" resultType="long">
        select count(1)
        from <include refid="tb"/>
    </select>


    <update id="update" parameterType="map">
        UPDATE
        <include refid="tb"/>
        <set>
            push_finish_at = now()
        </set>
        WHERE sku_code = #{sku_code}
    </update>


    <select id="loadId" parameterType="long" resultType="long">
        select id
        from <include refid="tb"/>
        limit #{offset}, 1
    </select>

    <select id="loadMaxId" resultType="long">
        select max(id)
        from <include refid="tb"/>
    </select>

    <select id="paging" parameterType="map" resultType="string">
        select sku_code
        from <include refid="tb"/>
        <include refid="queryCondition"/>
        limit #{offset}, #{limit}
    </select>

    <sql id="queryCondition">
        where `id` &gt;= #{idStart} and `id` &lt;= #{idEnd}
    </sql>
</mapper>
