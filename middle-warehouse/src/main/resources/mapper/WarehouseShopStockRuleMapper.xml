<mapper namespace="WarehouseShopStockRule">
    <resultMap id="WarehouseShopStockRuleMap" type="WarehouseShopStockRule">
        <id property="id" column="id"/>
        <result property="shopId" column="shop_id"/>
        <result property="shopName" column="shop_name"/>
        <result property="safeStock" column="safe_stock"/>
        <result property="ratio" column="ratio"/>
        <result property="status" column="status"/>
        <result property="lastPushStock" column="last_push_stock"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="tb">
        pousheng_warehouse_shop_stock_rules
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        `shop_id`, `shop_name`, `safe_stock`, `ratio`, `status`, `last_push_stock`, `created_at`, `updated_at`
    </sql>

    <sql id="vals">
        #{shopId}, #{shopName}, #{safeStock}, #{ratio}, #{status}, #{lastPushStock},
        now(), now()
    </sql>

    <sql id="criteria">
        <where>
            <if test="shopId != null">AND `shop_id` = #{shopId}</if>
            <if test="status != null">AND `status` = #{status}</if>
        </where>
    </sql>

    <insert id="create" parameterType="WarehouseShopStockRule" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="WarehouseShopStockRuleMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByIds" parameterType="list" resultMap="WarehouseShopStockRuleMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <update id="update" parameterType="WarehouseShopStockRule">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="safeStock != null">`safe_stock` = #{safeStock},</if>
            <if test="ratio != null">`ratio` = #{ratio},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="lastPushStock != null">`last_push_stock` = #{lastPushStock},</if>
            updated_at = now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE id = #{id}
    </delete>
    
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <select id="paging" parameterType="map" resultMap="WarehouseShopStockRuleMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
        ORDER BY `id` DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="findByShopId" parameterType="long" resultMap="WarehouseShopStockRuleMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        WHERE shop_id=#{shopId}
    </select>

</mapper>
