<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="WarehouseRule">
    <resultMap id="WarehouseRuleMap" type="WarehouseRule">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="shop_group_id" property="shopGroupId"/>
        <result column="item_priority_type" property="itemPriorityType"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <sql id="tb">
        pousheng_warehouse_rules
    </sql>

    <sql id="cols_all">
        id, <include refid="cols_exclude_id" />
    </sql>

    <sql id="cols_exclude_id">
        name, shop_group_id,item_priority_type, created_at, updated_at
    </sql>

    <sql id="vals">
        #{name}, #{shopGroupId},#{itemPriorityType}, now(), now()
    </sql>


    <sql id="order">
        order by id desc
    </sql>

    <insert id="create" parameterType="WarehouseRule" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="tb" />
        (<include refid="cols_exclude_id" />)
        VALUES
        (<include refid="vals" />)
    </insert>

    <select id="findById" parameterType="long" resultMap="WarehouseRuleMap" >
        SELECT <include refid="cols_all" />
        FROM <include refid="tb" />
        WHERE id = #{id}
    </select>

   <select id="findByIds" parameterType="list" resultMap="WarehouseRuleMap">
        select id, <include refid="cols_exclude_id"/>
        from <include refid="tb"/>
        where id in
        <foreach collection="list" open="(" separator="," close=")"
                 item="item">
            #{item}
        </foreach>
        <include refid="order" />
    </select>

    <update id="update" parameterType="WarehouseRule">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="itemPriorityType != null">item_priority_type = #{itemPriorityType},</if>

            updated_at=now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tb"/>
        WHERE id = #{id}
    </delete>


 <!--   <sql id="queryCondition">
        <if test="shopGroupId != null">and `shop_group_id` = #{shopGroupId}</if>

    </sql>-->

    <select id="findByShopGroupIds" parameterType="list" resultMap="WarehouseRuleMap">
        select id, <include refid="cols_exclude_id"/>
        from <include refid="tb"/>
        where shop_group_id in
        <foreach collection="list" open="(" separator="," close=")"
                 item="item">
            #{item}
        </foreach>
    </select>

    <select id="count" resultType="long">
        select count(distinct(shop_group_id))
        from <include refid="tb"/>
    </select>

    <select id="pagination" parameterType="map" resultType="long">
        select distinct(shop_group_id) from <include refid="tb"/>
        order by shop_group_id desc limit #{offset},#{limit}
    </select>

    <select id="findByShopGroupId" parameterType="long" resultMap="WarehouseRuleMap">
        select id, <include refid="cols_exclude_id"/>
        from <include refid="tb"/>
        where shop_group_id=#{shopGroupId}
    </select>

</mapper>